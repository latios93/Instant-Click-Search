{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "2.3",
	"author": "Luca Ioffredo",
	"developer": {
		"name": "Luca Ioffredo"
	},
	"background" : { 
		"scripts": ["js/vars.js", "js/functions.js", "js/background.js"] 
	},
	"options_ui": { 
		"page": "options.html",
		"open_in_tab": false 
	},
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"incognito": "spanning",
	"permissions": [
		"storage",
		"contextMenus",
		"tabs",
		"unlimitedStorage"
	],
	"applications": {
		"gecko": {
			"id": "clicksearch@lucaioffredo",
			"strict_min_version": "48.0"
		}
	},
	"default_locale": "en"
}